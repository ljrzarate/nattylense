<div class="container-fluid">

      <div class="row justify-content-center">
        <div class="col-md-7">
          <div class="row mb-5">
            <div class="col-12 ">
              <h2 class="site-section-heading text-center"><%= params[:tag].titleize %> Gallery</h2>
            </div>
          </div>
        </div>
      </div>

      <%- @posts.each do |post| %>
        <div class="row" id="lightgallery">
          <div class="col-sm-6 col-md-4 col-lg-3 col-xl-3 item" data-src=<%=rails_blob_url(post.image)%> data-sub-html="<h4>Fading Light</h4><p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolor doloremque hic excepturi fugit, sunt impedit fuga tempora, ad amet aliquid?</p>">
            <a href="#">
              <%= image_tag rails_blob_url(post.image), class: "img-fluid" %>
            </a>
          </div>
        </div>
      <%- end %>
</div>