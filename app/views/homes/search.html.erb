<div class="container-fluid">

      <div class="row justify-content-center">
        <div class="col-md-7">
          <div class="row mb-5">
            <div class="col-12 ">
              <h2 class="site-section-heading text-center"><%= params[:tag].titleize %> Gallery</h2>
            </div>
          </div>
        </div>
      </div>

      <div class="row" id="lightgallery">
        <%- @posts.each do |post| %>
          <div class="col-sm-6 col-md-4 col-lg-3 col-xl-3 item" data-src=<%=rails_blob_url(post.image)%> data-sub-html=<%= post.description %>>
            <a href="#">
              <%= image_tag rails_blob_url(post.image), class: "img-fluid" %>
            </a>
          </div>
        <%- end %>
      </div>
</div>