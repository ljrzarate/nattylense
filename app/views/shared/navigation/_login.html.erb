<li class="has-children">
  <% if current_user %>
    <div class="active has-children">
      <%= link_to current_user.email %>
      <ul class="dropdown">
        <li><%= link_to "Edit Profile", edit_user_registration_url %></li>
        <li><%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-danger" %></li>
      </ul>
    </div>
    <% else %>
      <%= link_to "Log In", new_user_session_url %>
    <% end %>
  </ul>
</li>