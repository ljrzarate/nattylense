<div class="site-section"  data-aos="fade">
  <div class="container">

    <div class="row justify-content-center">

      <div class="col-md-7">
        <div class="row mb-5">
          <div class="col-12 ">
            <h2 class="site-section-heading text-center">Contact</h2>
          </div>
        </div>
      </div>

    </div>


    <div class="d-flex justify-content-between row">
      <div class="col-lg-8 mb-5">
        <%= form_with model: @contact do |f| %>

          <div class="row form-group">
            <%= render "shared/navigation/flash" %>
            <div class="col-md-12 d-flex">
              <div class="w-50 me-5">
                <label class="text-white" for="first_name">First Name</label>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
              </div>
              <div class="w-50">
                <label class="text-white" for="last_name">Last Name</label>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <label class="text-white" for="email">Email</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <label class="text-white" for="subject">Subject</label>
              <%= f.text_field :subject, autofocus: true, autocomplete: "subject", class: "form-control" %>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <label class="text-white" for="subject">Message</label>
              <%= f.text_area :message, autofocus: true, autocomplete: "message", placeholder: "Write your notes or questions here...", class: "form-control" %>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <input type="submit" value="Send Message" class="btn btn-primary py-2 px-4 text-white">
            </div>
          </div>

        <% end %>


      </div>
    </div>
  </div>
</div>